<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.calculator"
          android:versionCode="1"
          android:versionName="1.0">
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">
        <activity android:name="FinancialCalculator"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="MonthlyPaymentCalculation"
                  android:label="@string/MonthlyCalculation">
            <intent-filter>
                <action android:name="com.calculator.MonthlyPaymentCalculation" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="PropertyAnalysis"
                  android:label="@string/PropertyAnalysis">
            <intent-filter>
                <action android:name="com.calculator.PropertyAnalysis" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>    
    </application>
</manifest>
